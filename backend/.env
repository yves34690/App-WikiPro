# =======================
# WIKIPRO BACKEND CONFIG
# =======================

# Environment
NODE_ENV=development
PORT=3001

# =======================
# DATABASE CONFIGURATION
# =======================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=wikipro_app
DB_PASSWORD=change_me_in_production
DB_NAME=wikipro_dev
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Database Migrations & Sync
DB_RUN_MIGRATIONS=false
DB_SYNCHRONIZE=true
DB_LOGGING=true

# =======================
# SECURITY CONFIGURATION
# =======================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Password Hashing
BCRYPT_ROUNDS=12

# =======================
# API CONFIGURATION
# =======================

# API Throttling (requests per minute)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =======================
# LOGGING & MONITORING
# =======================

# Log Levels: error, warn, info, debug, verbose
LOG_LEVEL=debug

# Application Monitoring
APP_NAME=wikipro-backend
APP_VERSION=1.0.0

# Telemetry
TELEMETRY_ENABLED=true
METRICS_PORT=3002

# =======================
# AI PROVIDERS (OPTIONAL)
# =======================

# Google Gemini
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (pour futures int√©grations)
OPENAI_API_KEY=your_openai_api_key_here

# =======================
# DEVELOPMENT SETTINGS
# =======================

# Seeds & Test Data
CREATE_TEST_DATA=true
TEST_TENANT_SLUG=demo-company
TEST_ADMIN_EMAIL=admin@demo-company.com
TEST_ADMIN_PASSWORD=AdminDemo123!
TEST_USER_EMAIL=user@demo-company.com
TEST_USER_PASSWORD=UserDemo123!
