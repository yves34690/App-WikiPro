# =======================
# WIKIPRO BACKEND CONFIG
# =======================

# Environment
NODE_ENV=development
PORT=3001

# =======================
# DATABASE CONFIGURATION
# =======================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=wikipro_app
DB_PASSWORD=change_me_in_production
DB_NAME=wikipro_dev
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Database Migrations & Sync
DB_RUN_MIGRATIONS=false
DB_SYNCHRONIZE=true
DB_LOGGING=true

# =======================
# SECURITY CONFIGURATION
# =======================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Password Hashing
BCRYPT_ROUNDS=12

# =======================
# API CONFIGURATION
# =======================

# API Throttling (requests per minute)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =======================
# LOGGING & MONITORING
# =======================

# Log Levels: error, warn, info, debug, verbose
LOG_LEVEL=debug

# Application Monitoring
APP_NAME=wikipro-backend
APP_VERSION=1.0.0

# Telemetry
TELEMETRY_ENABLED=true
METRICS_PORT=3002

# =======================
# AI PROVIDERS MULTI-PROVIDERS
# =======================

# OpenAI Configuration
AI_OPENAI_API_KEY=sk-your-openai-api-key-here
AI_OPENAI_MODEL=gpt-4
AI_OPENAI_DAILY_LIMIT=500000
AI_OPENAI_MONTHLY_LIMIT=10000000

# Anthropic Configuration  
AI_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
AI_ANTHROPIC_MODEL=claude-3-sonnet-20240229
AI_ANTHROPIC_DAILY_LIMIT=300000
AI_ANTHROPIC_MONTHLY_LIMIT=6000000

# Google Gemini Configuration
AI_GEMINI_API_KEY=your_gemini_api_key_here
AI_GEMINI_MODEL=gemini-1.5-pro
AI_GEMINI_DAILY_LIMIT=200000
AI_GEMINI_MONTHLY_LIMIT=4000000

# AI General Configuration
AI_DEFAULT_TEMPERATURE=0.7
AI_DEFAULT_MAX_TOKENS=1000
AI_TIMEOUT=30000

# AI Quotas - Tenant Limits
AI_TENANT_DAILY_TOKEN_LIMIT=50000
AI_TENANT_MONTHLY_TOKEN_LIMIT=1000000
AI_TENANT_DAILY_REQUEST_LIMIT=1000
AI_TENANT_MONTHLY_REQUEST_LIMIT=20000

# AI Fallback Configuration
AI_FALLBACK_ENABLED=true
AI_CIRCUIT_BREAKER_THRESHOLD=5
AI_CIRCUIT_BREAKER_TIMEOUT=60000
AI_RETRY_DELAY=1000
AI_MAX_RETRIES=3

# Legacy Support (backwards compatibility)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=sk-your-openai-api-key-here

# =======================
# DEVELOPMENT SETTINGS
# =======================

# Seeds & Test Data
CREATE_TEST_DATA=true
TEST_TENANT_SLUG=demo-company
TEST_ADMIN_EMAIL=admin@demo-company.com
TEST_ADMIN_PASSWORD=AdminDemo123!
TEST_USER_EMAIL=user@demo-company.com
TEST_USER_PASSWORD=UserDemo123!
