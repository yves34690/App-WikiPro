            "roles": {
                "id": "UUID PRIMARY KEY",
                "name": "VARCHAR(50) NOT NULL",
                "permissions": "JSONB NOT NULL",
                "tenant_id": "UUID NOT NULL REFERENCES tenants(id)"
            },
            "user_roles": {
                "user_id": "UUID REFERENCES users(id)",
                "role_id": "UUID REFERENCES roles(id)",
